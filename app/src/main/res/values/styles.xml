<resources>

    <!-- ****************************************************************** -->
    <!-- App light theme                                                    -->
    <!-- ****************************************************************** -->

    <style name="AppTheme.Light" parent="android:Theme.Material.Light">
        <item name="android:colorAccent">@color/color_default_accent</item>
    </style>

    <!-- ****************************************************************** -->
    <!-- App white theme                                                    -->
    <!-- ****************************************************************** -->

    <style name="AppTheme.White" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/color_theme_white_primary</item>
        <item name="android:colorPrimaryDark">@color/color_theme_white_primary_dark</item>
        <item name="android:colorAccent">@color/color_theme_white_accent</item>
        <item name="android:textColorPrimary">@color/color_theme_white_text</item>

        <item name="android:windowBackground">@color/color_theme_white_primary</item>

        <item name="android:navigationBarColor">@color/color_theme_white_primary_dark</item>
        <!--<item name="android:windowLightNavigationBar">true</item>-->
        <!--<item name="android:windowLightStatusBar">true</item>-->
    </style>

    <!-- ****************************************************************** -->
    <!-- App dark theme                                                     -->
    <!-- ****************************************************************** -->

    <style name="AppTheme.Dark" parent="android:Theme.Material">
        <item name="android:colorAccent">@color/color_default_accent</item>
    </style>

    <!-- ****************************************************************** -->
    <!-- App black theme                                                    -->
    <!-- ****************************************************************** -->

    <style name="AppTheme.Black" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/color_theme_black_primary</item>
        <item name="android:colorPrimaryDark">@color/color_theme_black_primary</item>
        <item name="android:colorAccent">@color/color_theme_black_accent</item>

        <item name="android:windowBackground">@color/color_theme_black_primary</item>

        <item name="android:navigationBarColor">@color/color_theme_black_navigation_bar</item>
    </style>

    <!-- ****************************************************************** -->
    <!-- App temporary theme                                                    -->
    <!-- ****************************************************************** -->

    <style name="AppTheme.Temporary" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/color_theme_temporary_primary</item>
        <item name="android:colorPrimaryDark">@color/color_theme_temporary_primary_dark</item>
        <item name="android:colorAccent">@color/color_default_accent</item>
    </style>

    <!-- ****************************************************************** -->
    <!-- App temporary theme                                                    -->
    <!-- ****************************************************************** -->

    <style name="AppTheme.TurboPascal" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/color_theme_turbo_pascal_primary</item>
        <item name="android:colorAccent">@color/color_theme_turbo_pascal_accent</item>

        <item name="android:editTextColor">@color/color_theme_turbo_pascal_text</item>

        <item name="android:windowBackground">@color/color_theme_turbo_pascal_background</item>
    </style>


    <!-- ****************************************************************** -->
    <!-- Settings activity theme                                            -->
    <!-- ****************************************************************** -->

    <!-- Settings theme -->
    <style name="AppTheme.SettingsTheme" parent="android:Theme.Material.Settings">
        <item name="android:colorAccent">@color/color_default_accent</item>
    </style>

</resources>
